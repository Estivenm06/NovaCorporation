each plan in plansArray
    .px-10.py-5.bg-white.border.border-gray-200.rounded-lg.shadow-sm(class="duration-250 m-3")
        div(class="flex flex-col justify-end mx-auto h-full")
            .justify-start.h-full
                h5.mb-4.text-xl.font-medium Plan #{plan.name}
                    .flex.items-baseline
                        span.text-3xl.font-semibold $
                        span.text-5xl.font-extrabold.tracking-tight #{plan.value}
                        span.ms-1.text-xl.font-normal.text-gray-500 /month
                    ul(class="space-y-5 my-7")
                        each item in plan.advantages
                            li.flex.items-center
                                img(src="./img/check.svg", alt="check" class="w-5")
                                span(class="text-base font-normal leading-tight ms-3") #{item}
            button(type="button" class="buttonPlan text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900 font-medium rounded-lg text-sm px-5 py-2.5 w-full") Escoger Plan