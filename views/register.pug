extends ./layout/index.pug

block slider
    .slider
        .mx-auto.container.flex.justify-center
                form(action="/register", method="post" class="bg-gray-500/80 transition-opacity px-15 py-15 rounded-lg text-2xl flex flex-col text-white shadow-md")
                    label(for="email" class="text-center  hover:text-gray-300 cursor-pointer duration-250") Email
                    input(name="email" id="email" type="text" class="ring-2 rounded-md text-center text-3xl mb-5 " placeholder="Ingresa tu Email...")
                    label(for="contraseña" class="text-center hover:text-gray-300 cursor-pointer duration-250") Contraseña
                    input(name="contraseña" id="contraseña" type="password" class="ring-2 rounded-md text-center text-3xl mb-5" placeholder="Ingresa tu Contraseña...")
                    label(for="contraseñaConfirm" class="text-center hover:text-gray-300 cursor-pointer duration-250") Confirmar Contraseña
                    input(name="contraseñaConfirm" id="contraseñaConfirm" type="password" class="ring-2 rounded-md text-center text-3xl mb-5" placeholder="Confirma tu Contraseña...")
                    button(type="submit" class="border border-purple-600 rounded-lg bg-purple-500 hover:bg-purple-600 hover:shadow-2xl mt-5 cursor-pointer duration-250") Registrarse
                    a(href="/login" class="text-center text-black hover:text-gray-200 mt-5 duration-250 hover:shadow-2xl z-10") ¿Ya tienes cuenta?